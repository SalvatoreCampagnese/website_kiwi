<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//*[@id='default_snippets']" position="before">
            <t id="x_theme_snippets">
                <div id="x_theme_snippets_category" class="o_panel">
                    <div class="o_panel_header">Theme</div>
                    <div class="o_panel_body">
                        <t t-snippet="kiwi_theme.s_kiwi_quickactions"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet.svg">
                            <keywords>Custom Snippet</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_heroslider"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Hero Slider</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_productslider"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Product Slider</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_pointsbanner"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Points Banner</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_learninginfo"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Learning info</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_infobox"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Info box</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_bigbanner"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Big banner</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_twocolumn"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Two column</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_premiumtiers"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Premium tiers</keywords>
                        </t>
                        <t t-snippet="kiwi_theme.s_kiwi_bigcards"
                            t-thumbnail="/kiwi_theme/static/src/img/wbuilder/s_kiwi_snippet2.svg">
                            <keywords>Big Cards</keywords>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>

    </template>
</odoo>